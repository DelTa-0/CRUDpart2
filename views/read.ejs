<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 text-white">
        <div class="nav mb-10">
            <a class="text-blue-400" href="/">Back Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <%if(users.length>0){%>
                <% users.forEach(function (user) { %>
                <div class="user w-72 p-5 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-blue-400">
                        <img src="<%= user.imageurl %>" alt="" class="w-full h-full object-cover overflow-hidden">
                    </div>
                    <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3">
                        <a href="/edit/<%=user._id%>" class="text-zinc-500">Edit user</a>
                        <a class="text-red-500" href="/delete/<%=user._id%>">Delete user</a>
                    </div>
                </div>
            <% }); %>
            <%}else{%>
                <h2 class="text-blue-400">no Users yet</h2>
            <%} %>
        </div>
    </div>
</body>
</html>
